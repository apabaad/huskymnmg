<div class="tech-specs-section">
<div class ="tech-specs-container">
<h2 class ="husky-specs-title"> Technical Specifications </h2>
{{product.metafields.husky-tech-specs.husky-tech-specs}}
</div>
</div>

{% style %}

.tech-specs-section{
    margin-top:3rem;
    /* background-color:#e6e6e6; */
}

.tech-specs-container {
    width:1150px;
    margin:auto;
    padding:4rem 0;
}

.husky-specs-title{
    position:relative;
    font-weight: 600;
    font-size: 1.8rem;
}

.husky-specs-title::after{
    content:"";
    width:100px;
    background-color: #308EB4;
    height:3px;
    position:absolute;
    left:0;
    bottom:-10px;
}

.tech-specs-container table{
    margin-top:2rem;
}
.tech-specs-container table tr{
    border-bottom: 2px solid #f1f1f1;
}
.tech-specs-container table td:first-child {
    font-weight:700;
}
.tech-specs-container table td{
    padding: 10px 0;
}

{% endstyle %}

{% schema %}
    {
        "name":"Husky Tech Specs",
        "presets":[{
          "name":"Technical Specs"  
        }]

    }
{% endschema %}